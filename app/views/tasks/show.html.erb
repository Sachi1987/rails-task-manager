<div class="container">
  <div class="box">

    <h1><%= @task.title %><%= link_to "edit", edit_task_path(@task), class: 'btn btn-primary edit' %></h1>
    <h3><%= @task.details %></h3>
    <ul>
      <li>
        <% if @task.completed == true %>
          <input type="checkbox" id="scales" name="completed" value="scales" checked/> <p>This task is completed</p>
        <% else %>
           <input type="checkbox" id="scales" name="completed" value="scales">  <p>This task is completed</p>
        <% end %>
      </li>
    </ul>
    <%= link_to "back to the lists", tasks_path %>

  </div>
</div>
